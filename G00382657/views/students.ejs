<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
    <title>Students</title>
</head>
<body>
    <div class="container">
        <h1>Students</h1>
        
        <table>
            <thead>
                <tr>
                    <th>Student ID</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% students.forEach(student => { %>
                    <tr>
                        <td><%= student.sid %></td>
                        <td><%= student.name %></td>
                        <td><%= student.age %></td>
                        <td>
                            <a href="/students/edit/<%= student.sid %>" class="btn btn-primary">Update</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        
        <div class="action-buttons">
            <a href="/students/add" class="btn btn-success">Add Student</a>
            <a href="/" class="btn btn-secondary">Home</a>
        </div>
    </div>
</body>
</html>