<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
    <title>Grades</title>
</head>
<body>
    <div class="container">
        <h1>Grades</h1>
        
        <table>
            <thead>
                <tr>
                    <th>Student</th>
                    <th>Module</th>
                    <th>Grade</th>
                </tr>
            </thead>
            <tbody>
                <% Object.keys(gradesData).forEach(studentName => { %>
                    <% const modules = gradesData[studentName]; %>
                    <% if (modules.length === 0) { %>
                        <tr>
                            <td><%= studentName %></td>
                            <td colspan="2">No modules enrolled</td>
                        </tr>
                    <% } else { %>
                        <% modules.forEach((module, index) => { %>
                            <tr>
                                <% if (index === 0) { %>
                                    <td rowspan="<%= modules.length %>"><%= studentName %></td>
                                <% } %>
                                <td><%= module.module_name %></td>
                                <td><%= module.grade %></td>
                            </tr>
                        <% }) %>
                    <% } %>
                <% }) %>
            </tbody>
        </table>
        
        <div class="button-group">
            <a href="/" class="btn btn-secondary">Home</a>
        </div>
    </div>
</body>
</html>